{{#section 'head'}}
    {{!-- <script src="http:/cdnjs.claudflare.com/ajax/libs/handlerbars.js/1.3.0/handlerbars.min.js"> </script> --}}
    <script src="https://github.com/downloads/wycats/handlebars.js/handlebars-1.0.rc.1.min.js " type="text/javascript"></script>
    <script id="nurseryRhymeTemplate" type="text/x-handlerbars-template">
        Mery had a little <b>\{{animal}} </b>
        her <b> \{{bodyPart}} </b> was <b> \{{adjactive}} </b> 
        as <b> \{{noun}} </b> 
    </script>
{{/section}}
{{#section 'jquery'}}
<script>
    $(document).ready(
        function(){ 
            var nurseryRhymeTemplate = Handlebars.compile(
                $('#nurseryRhymeTemplate').html());
            var $nurseryRhyme = $('#nurseryRhyme');
             $nurseryRhyme.html('zzz');
            $('#btnNurseryRhyme').on('click', function (evt){
                
                evt.preventDefault(); 
                $nurseryRhyme.html(nurseryRhymeTemplate({
                    animal:'cat',
                    bodyPart:'tail',
                    adjactive:'keen',
                    noun: 'nipple'
                }));
            });

            $('#btnNurseryRhymeAjax').on('click', function (evt){
                evt.preventDefault();
                $.ajax('/data/nursery-rhyme', {
                    success: function (data){
                        $nurseryRhyme.html(nurseryRhymeTemplate(data));
                    }
                })
            });
        }
    );
     </script>
{{/section}}

<div id="nurseryRhyme"> Push the button</div>
<hr>
<button id="btnNurseryRhyme">  Child rhyme</button>
<button id="btnNurseryRhymeAjax">  Child rhyme AJAX</button>